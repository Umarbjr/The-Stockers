        <ImageView
            android:id="@+id/barcode_logo"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:src="@drawable/barcode_image"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scan_resultTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_logo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Scan barcodes to add items easily."
            android:fontFamily="@font/alata"
            android:textAlignment="center"
            android:textStyle="bold" />


        <Button
            android:id="@+id/scanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_resultTV"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="Scan Barcode"
            android:fontFamily="@font/alata"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"
            app:backgroundTint="@color/purple_200"
            android:textColor="@color/black_shade_1"/>

